#include <windows.h>

1 VERSIONINFO
    FILEVERSION     ${HUEZOO_MAJOR},${HUEZOO_MINOR},${HUEZOO_PATCH},0
    PRODUCTVERSION  ${HUEZOO_MAJOR},${HUEZOO_MINOR},${HUEZOO_PATCH},0
    FILEFLAGSMASK   0x00000000
    FILEFLAGS       0x00000000
    FILEOS          VOS__WINDOWS32
    FILETYPE        VFT_APP
    FILESUBTYPE     VFT2_UNKNOWN
{
    BLOCK "StringFileInfo"
    {
        BLOCK "0409fde9"
        {
            VALUE "CompanyName", "${HUEZOO_AUTHOR} ${HUEZOO_AUTHOR_EMAIL}"
            VALUE "FileDescription", "${HUEZOO_DESCRIPTION}"
            VALUE "FileVersion", "${HUEZOO_VERSION}.0"
            VALUE "InternalName", "${PROJECT_NAME}"
            VALUE "LegalCopyright", "2013 ${HUEZOO_AUTHOR}"
            VALUE "OriginalFilename", "${PROJECT_NAME}.exe"
            VALUE "ProductName", "${PROJECT_NAME}"
            VALUE "ProductVersion", "${HUEZOO_VERSION}.0"
        }
    }
    BLOCK "VarFileInfo"
    {
        VALUE "Translation", 0x0409, 0xFDE9
    }
}
